{% extends '@layout/default.html.twig' %}

{% block title %}Listagem de Campanhas - {{ parent() }}{% endblock %}

{% block page_header %}Listagem de Campanhas{% endblock %}

{% block content %}
	<div class="row">
		<div class="box">
			<div class="box-header">
				<a href="{{ url('admin.campaigns.create') }}" class="btn btn-app">
					<i class="fa fa-plus-circle"></i> Novo
				</a>
			</div>
			<div class="box-body">
			    <table class="table table-bordered">
			    	<tbody>
				    	<tr>
				    		<th style="width: 10px">
				    			#
				    		</th>
				    		<th>
				    			Campanha
				    		</th>
				    		<th>
				    			Ações
				    		</th>
				    	</tr>
				        {% for campaign in campaigns %}
				        <tr>
				        	<td>
				    			{{ campaign.id }}
				    		</td>
				    		<td>
				    			{{ campaign.name }}
				    		</td>
				            <td>
				                <a href="{{ url('admin.campaigns.update', {'id': campaign.id}) }}">Editar</a>
				                |
				                <a href="{{ url('admin.campaigns.delete', {'id': campaign.id}) }}">Excluir</a>
				            </td>
				        </tr>
				        {% endfor %}
			    	</tbody>
			    </table>
			</div>
		</div>
	</div>
{% endblock %}