{% extends '@layout/default.html.twig' %}

{% block title %}Excluir Tags - {{ parent() }}{% endblock %}

{% block page_header %}Excluir Tags{% endblock %}

{% block content %}
	{% include '@app/tags/_form-elements.html.twig' %}

	{% set submit = form.get('submit') %}
	{% do submit.setAttribute('class', 'btn btn-primary').setLabel('Excluir') %}

	{% do form.setAttribute('action', url('admin.tags.delete', {id: form.getObject().id})) %}
	{% do form.prepare() %}
	
	<div class="row">
		<div class="col-md-8">
			<div class="box box-danger">
				<div class="box-body">
					<form name="form_disabled" role="form" method="post">
						<fieldset disabled>
							{% include '@app/tags/_form-body.html.twig' %}
						</fieldset>
					</form>
					{{ form().openTag(form) | raw }}
					{{ formHidden(form.get('_method')) }}
						<div class="box-footer">
							{{ formButton(submit) }}
						</div>
					{{ form().closeTag() | raw }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}