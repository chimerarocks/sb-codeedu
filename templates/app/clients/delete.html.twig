{% extends '@layout/default.html.twig' %}

{% block title %}Excluir Contato - {{ client.name }}{% endblock %}

{% block page_header %}Excluir Contato{% endblock %}

{% block content %}
	<div class="row">
		<div class="col-md-8">
			<div class="box box-danger">
				<div class="box-body">
					<form method="POST" name="form_disabled" role="form">
						<fieldset disabled>
							<div class="box-body">
								<div class="form-group">
									<label for="name">Nome:</label>
									<input type="text" class="form-control" name="name" value="{{client.name}}">
								</div>
								<div class="form-group">
									<label for="email">Email:</label>
									<input type="email" class="form-control" name="email" value="{{client.email}}" required="required" />
								</div>
								<div class="form-group">
									<label for="cpf">Cpf:</label>
									<input type="text" class="form-control" name="cpf" value="{{client.cpf}}" required="required" />
								</div>
							</div>
						</fieldset>
					</form>
					<form
						action="{{url('admin.clients.delete', {id: client.id})}}" 
						name="form" 
						role="form"
						method="post" 
						>
						<input type="hidden" class="form-control" name="_method" value="DELETE">
						<div class="box-footer">
							<button class="btn btn-danger" type="submit">Excluir</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}