{% extends '@layout/default.html.twig' %}

{% block title %}Listagem de Contatos - {{ parent() }}{% endblock %}

{% block page_header %}Listagem de Contatos{% endblock %}

{% block content %}
	<div class="row">
		<div class="box">
			<div class="box-header">
				<a href="{{ url('admin.clients.create') }}" class="btn btn-app">
					<i class="fa fa-plus-circle"></i> Novo
				</a>
			</div>
			<div class="box-body">
			    <table class="table table-bordered">
			    	<tbody>
				    	<tr>
				    		<th style="width: 10px">
				    			#
				    		</th>
				    		<th>
				    			Cliente
				    		</th>
				    		<th>
				    			Email
				    		</th>
				    		<th>
				    			Ações
				    		</th>
				    	</tr>
				        {% for client in clients %}
				        <tr>
				        	<td>
				    			{{ client.id }}
				    		</td>
				    		<td>
				    			{{ client.name }}
				    		</td>
				            <td>
				                {{ client.email }}
				            </td>
				            <td>
				                <a href="{{ url('admin.clients.update', {'id': client.id}) }}">Editar</a>
				                {# |
				                <a href="{{ url('client.delete', {'id': client.id}) }}">Excluir</a> #}
				            </td>
				        </tr>
				        {% endfor %}
			    	</tbody>
			    </table>
			</div>
		</div>
	</div>
{% endblock %}