{% extends '@layout/default.html.twig' %}

{% block title %}Edição de Contato - {{ client.name }}{% endblock %}

{% block page_header %}Edição de Contato{% endblock %}

{% block content %}
	<div class="row">
		<div class="col-md-8">
			<div class="box box-primary">
				<div class="box-body">
					<form action="{{ url('admin.clients.update',{id: client.id}) }}" method="POST" name="form" role="form">
						<div class="box-body">
							<div class="form-group">
								<label for="name">Nome:</label>
								<input type="text" class="form-control" name="name" value="{{client.name}}">
							</div>
							<div class="form-group">
								<label for="email">Email:</label>
								<input type="email" class="form-control" name="email" value="{{client.email}}"required="required" />
							</div>
							<div class="form-group">
								<label for="cpf">Cpf:</label>
								<input type="text" class="form-control" name="cpf" value="{{client.cpf}}" required="required" />
							</div>
						</div>
						<div class="box-footer">
							<button class="btn btn-primary" type="submit">Editar</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}