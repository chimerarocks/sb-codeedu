{% extends '@layout/default.html.twig' %}

{% block title %}Cadastro de Contatos - {{ parent() }}{% endblock %}

{% block page_header %}Cadastro de Contatos{% endblock %}

{% block content %}
	{% 	set name   = form.get('name')   				%}
	{% 	do  name.setAttribute('class', 'form-control')  %}
	{%	set email  = form.get('email')  				%}
	{%	do  email.setAttribute('class', 'form-control') %}
	{% 	set cpf 	  = form.get('cpf')    				%}
	{% 	do  cpf.setAttribute('class', 'form-control')   %}
	{% 	set submit = form.get('submit') 				%}
	{% 
	   	do  submit.setAttribute('class', 'btn btn-primary')
				.setLabel('Incluir') 
	%}

	<div class="row">
		<div class="col-md-8">
			<div class="box box-primary">
				<div class="box-body">
					{{ form().openTag()}}
					<form action="{{ url('admin.clients.create') }}" method="POST" name="form" role="form">
						<div class="box-body">
							<div class="form-group">
								{{ formRow(name) }}
							</div>
							<div class="form-group">
								{{ formRow(email) }}
							</div>
							<div class="form-group">
								{{ formRow(cpf) }}
							</div>
						</div>
						<div class="box-footer">
							{{ formButton(submit) }}
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}