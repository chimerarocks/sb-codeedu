{% extends '@layout/default.html.twig' %}

{% block title %}Cadastro de Contatos - {{ parent() }}{% endblock %}

{% block page_header %}Cadastro de Contatos{% endblock %}

{% block content %}
	<div class="row">
		<div class="col-md-8">
			<div class="box box-primary">
				<div class="box-body">
					<form action="{{ url('admin.clients.create') }}" method="POST" name="form" role="form">
						<div class="box-body">
							<div class="form-group">
								<label for="name">Nome:</label>
								<input type="text" class="form-control" name="name"/>
							</div>
							<div class="form-group">
								<label for="email">Email:</label>
								<input type="email" class="form-control" name="email" required="required" />
							</div>
							<div class="form-group">
								<label for="cpf">Cpf:</label>
								<input type="text" class="form-control" name="cpf" required="required" />
							</div>
						</div>
						<div class="box-footer">
							<button class="btn btn-primary" type="submit">Incluir</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}